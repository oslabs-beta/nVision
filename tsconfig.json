{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "jsx": "react-jsx",
    "plugins": [{ 
      "name": "typescript-plugin-css-modules",
      "option": {
        "postcssOptions": {
          "useConfig": true
        },
      }
       }]
  },
  "include": [
    "app/**/*",
    "styles.d.ts"
    ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
