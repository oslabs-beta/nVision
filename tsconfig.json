{
  "compilerOptions": {
    "target": "ES5",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
  },
  "include": [
    "globals.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
   ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
